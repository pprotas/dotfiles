# Focus window
ralt - h : yabai -m window --focus west || yabai -m display --focus west
ralt - j : yabai -m window --focus south || yabai -m display --focus south
ralt - k : yabai -m window --focus north || yabai -m display --focus north
ralt - l : yabai -m window --focus east || yabai -m display --focus east

# Swap window
ralt + shift - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
ralt + shift - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
ralt + shift - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
ralt + shift - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# Move window to space
ralt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
ralt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
ralt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
ralt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
ralt + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
ralt + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6

# Move window to previous space
ralt + shift - o : yabai -m window --space recent; yabai -m space --focus recent

# Focus space
ralt - 1 : yabai -m space --focus 1
ralt - 2 : yabai -m space --focus 2
ralt - 3 : yabai -m space --focus 3
ralt - 4 : yabai -m space --focus 4
ralt - 5 : yabai -m space --focus 5
ralt - 6 : yabai -m space --focus 6

# Focus previous space
ralt - o : yabai -m space --focus recent
                   
# Create/destroy spaces
ralt - c : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}"
ralt - x : yabai -m space --destroy

# Full screen
ralt - z : yabai -m window --toggle zoom-fullscreen

# Toggle float
ralt - f : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# Toggle split
ralt - s : yabai -m window --toggle split

# Balance windows
ralt - e : yabai -m space --balance

# Show desktop
ralt - d : yabai -m space --toggle show-desktop

# Open mission control
ralt - m : yabai -m space --toggle mission-control

# Resize
ralt - left : yabai -m window --resize left:-16:0 ; yabai -m window --resize right:-16:0
ralt - down : yabai -m window --resize bottom:0:16 ; yabai -m window --resize top:0:16
ralt - up : yabai -m window --resize top:0:-16 ; yabai -m window --resize bottom:0:-16
ralt - right : yabai -m window --resize right:16:0 ; yabai -m window --resize left:16:0
